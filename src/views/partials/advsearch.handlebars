<form class="advsearch hidden"  id="advsearch">
    <div class="advsearch__component">
        <label class="advsearch__label" for="start_date">
            Date range
        </label>
        <input
            type="date"
            name="start_date"
            class="advsearch__input"
        />
        <label class="advsearch__label" for="end_date">to</label>
        <input
            type="date"
            name="end_date"
            class="advsearch__input"
        />
    </div>

    <div class="advsearch__component">
        <label class="advsearch__label" for="sort">Sort by</label>
        <select class="advsearch__input" name="sort">
            <option value="0">Newest first</option>
            <option value="1">Oldest first</option>
            <option value="2">Most popular first</option>
            <option value="3">Least popular first</option>
        </select>
    </div>

    <div class="advsearch__component">
        <label class="advsearch__label" for="author_name">Authors</label>
        <input
            type="text"
            name="author_name"
            class="advsearch__input"
            placeholder="Enter username..."
        />
    </div>


    <div class="advsearch__component">
        <label class="advsearch__label" for="include_game">Include Games</label>
        <div class="game__search">
            {{> tags}}
            <input type="text"
                name="include_game"
                class="advsearch__input"
                placeholder="Add games..."
            />
            <div class="dropdown"></div>
        </div>
    </div>

    <div class="advsearch__component">
        <label class="advsearch__label" for="include_tag">Include Tags</label>
        <div class="tag__search">
            {{> tags}}
            <input type="text"
                name="include_tag"
                class="advsearch__input"
                placeholder="Add games..."
            />
        </div>
    </div>

    <button type="reset" class="button button--light button--light--small">
        Reset
    </button>
</form>


<script src="/js/search_games.js"></script>