<label for="{{id}}">{{label}}</label>
<div class="register__input">
    <div class="register__icon">
        <span class="material-symbols-outlined">{{icon}}</span>
    </div>
    <input class = "register__inputbox" type="{{type}}"
        placeholder="{{placeholder}}" id="{{id}}" name="{{id}}"
        {{#if minlength}} minlength="{{minlength}}" {{/if}}
        {{#if required}} required {{/if}}
        {{#if oninput}} oninput="{{oninput}}" {{/if}}>

    {{#if password}}
        <button type="button" class=" button button--mint-glow toggle-password" onclick="togglePassword('{{id}}')">
            <span class="material-symbols-outlined">visibility_off</span>
        </button>
    {{/if}}
</div>