{{! sidebar.handlebars 
    Partial for the forum sidebar
}}

<nav class="sidebar">
    {{! A bar that's on the side}}
    {{#each game_data}}
        <img src="{{this.logo}}" class="sidebar__logo" />
        <div style="display: flex; gap: 10px; align-items: center;">
            <img src="{{this.icon}}" class="thread__image" />
            <p class="thread__detail">{{this.description}}</p>
        </div>
        <hr class="sidebar__rule" />
    {{/each}}

    <h2 class="sidebar__header">Top threads in the last 24 hours</h2>

    {{#if top_threads}}
    {{#each top_threads}}
    <a href="/threads/{{this._id}}" class="button button--light button--light--small" style="justify-content: space-between; ">
        <div style="display: flex; gap: 10px; align-items: center">
            <img src="{{#if this.thumbnail}}{{this.thumbnail}}{{else}}/img/favicon.png{{/if}}" style="height: 30px; width: 30px; object-fit: cover; border: 1px solid var(--kinkan-gray); border-radius: 5px" />
        <div>
        {{this.title}}<br>by <strong>{{this.author_data.name}}</strong></div>
        </div>
        <span class="material-symbols-outlined">keyboard_double_arrow_right</span>
    </a>
    {{/each}}
    {{else}}
    <p class="thread__detail">No threads in the past 24 hours. Come back later or <a href="/submission" class="article__link">make your own</a>!</p>
    {{/if}}

    <hr class="sidebar__rule" />

    <h2 class="sidebar__header">New to the forum?</h2>
    
    <p class="thread__detail">You can follow these links to get started:</p>
    <a href="/profile" class="button button--light button--light--small">Visit your profile</a>
    <a href="/submission" class="button button--light button--light--small">Create a post</a>
</nav>
