{{> profile_header}}

<div class="forum__body">
    <div class="forum__threads">
        <div class="forum__thread" style="gap: 10px;">
            <form class="advsearch__component" style="flex-grow: 0;">
                <label class="advsearch__label" for="sort">Sort by</label>
                <select class="advsearch__input" name="sort" style="flex: 0;">
                    <option>Newest first</option>
                    <option>Oldest first</option>
                    <option>Most popular first</option>
                    <option>Least popular first</option>
                </select>
            </form>

            <div class="profile__tabs">
                <a class="button button--light button--current button--light--small" style="flex: 1;">
                    Threads
                </a>
                <a class="button button--light button--light--small" style="flex: 1;" href="/profile/{{display_user._id}}/comments">
                    Comments
                </a>
                <a class="button button--light button--light--small" style="flex: 1;" href="/profile/{{display_user._id}}/upvoted">
                    Upvoted posts
                </a>
            </div>
        </div>
        
        <ul class="forum__threads">
            {{> threadlist threads=user_threads}}
        </ul>
    </div>
    
    {{> sidebar}}
</div>